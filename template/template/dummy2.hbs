            -webkit-text-fill-color: transparent;
            position: relative;
            overflow: hidden;


        }

        h1:after {
            content: "";
            position: absolute;
            top: 87%;
            left: 10%;
            height: 8px;
            width: 80%;
            border-radius: 8px;
            background-color: rgba(255, 255, 255, 0.055);
        }

        h1 span {
            position: absolute;
            top: 85%;
            left: 10%;
            height: 8px;
            width: 10px;
            border-radius: 8px;
            background-color: rgb(0, 251, 255);
            animation: anim 5s linear infinite;
        }

        @keyframes anim {
            95% {
                opacity: 1;
            }

            100% {
                opacity: 0;
                left: 88%;
            }
        }

        .cards {
