            align-items: center;
            flex-direction: column;
            position: relative;
            overflow: hidden;
        }

        .card:after {
            content: "";
            position: absolute;
            top: 150%;
            left: -200px;
            width: 120%;
            transform: rotate(50deg);
            background-color: #fff;
            height: 18px;
            filter: blur(30px);
            opacity: 0.5;
            transition: 1s;
